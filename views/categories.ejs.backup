<%- include layouts/header.ejs %>

        <div class="page-data">
        
        

        
         <div class="data-btn">
           <button onClick="addCategory();">+ Add</button>
         </div>
       
       
       
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Category Description</th>
                    <th width="300px">Action</th>
                </tr>
                               
                <% if(categories.length){ 
                                
                 for(var i = 0; i < categories.length; i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=categories[i].CategoryDescription%></td>
                    <td>
                        <a class="a-inside edit" href="../categories/edit/<%=categories[i].CategoryID%>">Edit</a>
                        <a class="a-inside delete" href="../categories/delete/<%=categories[i].CategoryID%>">Delete</a>
                        <a class="a-inside edit" href="../properties/PropertiesFromCategory/<%=categories[i].CategoryID%>">Props</a>
                         <a class="a-inside select" href="/categories/getcategoriesforparentid/<%=categories[i].CategoryID%>">Select</a>
                    </td>
                </tr>
            <% }
            
             } %>
                              
                
            </table>
         </div>
        </div>
        
<%- include layouts/footer.ejs %>
